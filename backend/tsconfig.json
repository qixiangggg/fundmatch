{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2023",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}